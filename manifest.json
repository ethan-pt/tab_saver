{
  "manifest_version": 3,

  "author": {"email": "tubbeethan@gmail.com"},
  "name": "Tab Saver",
  "description": "Save groups of chrome tabs so you never have to lose your work.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage"
  ],

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": {
    "default_title": "Tab Saver",
    "default_popup": "main.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}